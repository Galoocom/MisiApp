<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="misi_user.security.encoder.sha256_salted_encoder.class">Misi\Bundle\UserBundle\Security\Encoder\Sha256SaltedEncoder</parameter>
        <parameter key="misi_user.eventlistener.user.class">Misi\Bundle\UserBundle\EventListener\UserEventListener</parameter>
        <parameter key="misi_user.security.userprovider.class">Misi\Bundle\UserBundle\Security\UserProvider</parameter>
        <parameter key="fos_user.security.interactive_login_listener.class">Misi\Bundle\UserBundle\EventListener\LastLoginListener</parameter>
    </parameters>
    
    <services>
        <service id="misi_user.security.encoder.sha256_salted_encoder" class="%misi_user.security.encoder.sha256_salted_encoder.class%">
        </service>
        <service id="misi_user.eventlistener.user" class="%misi_user.eventlistener.user.class%">
            <tag name="kernel.event_subscriber" alias="misi_user_listener" />
                <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="misi_user.security.userprovider" class="%misi_user.security.userprovider.class%">
            <argument type="service" id="fos_user.user_manager" />
            <argument type="collection">
                <argument key="facebook">facebookId</argument>
                <argument key="twitter">twitterId</argument>
            </argument>            
            <argument type="service" id="sylius.repository.user" />
        </service>
    </services>
    
</container>
